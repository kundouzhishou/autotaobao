{
  "name": "Auto Taobao!",
  "version": "1.0",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
      "default_title": "AutoTaobao",
	  "default_icon" : "images/logo16.png"
	  //"default_popup": "popup.html"
  },
  "content_scripts": [{
  	  "matches": ["http://*/*","https://*/*"],          
	  "js": [ "common.js"],          
	  "run_at": "document_start",                
	  "all_frames": true                    
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": { "16": "images/logo16.png","48": "images/logo48.png","128": "images/logo128.png" },
  "manifest_version": 2
}